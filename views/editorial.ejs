<%- include("templates/cabecera.ejs") %>

  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
  <link rel="stylesheet" href="css/editorial.css">
  <div class="custom-container">
    <div class="editorial-form-card animate-new-item">
      <h2 class="section-title"><i class="fas fa-building me-2"></i>Datos de Editorial</h2>
      <form action="/insertareditorial" method="post">
        <div class="form-row">
          <div class="form-group">
            <label for="codi" class="custom-label">IdEditorial:</label>
            <input type="text" name="codi" id="codi" class="form-control custom-input" required>
          </div>
          <div class="form-group">
            <label for="edit" class="custom-label">Editorial:</label>
            <input type="text" name="edit" id="edit" class="form-control custom-input" required>
          </div>
        </div>
        <button type="submit" class="btn-custom-primary">
          <i class="fas fa-save me-2"></i>Registrar Editorial
        </button>
      </form>
    </div>

    <div class="custom-table-container animate-new-item">
      <table class="table custom-table">
        <thead>
          <tr>
            <th><i class="fas fa-hashtag me-2"></i>IdEditorial</th>
            <th><i class="fas fa-building me-2"></i>Editorial</th>
            <th><i class="fas fa-cogs me-2"></i>Acciones</th>
          </tr>
        </thead>
        <tbody>
          <% editoriales.forEach((editorial)=> { %>
            <tr>
              <td style="display: none;">
                <%= editorial._id %>
              </td>
              <td>
                <%= editorial.idEditorial %>
              </td>
              <td>
                <%= editorial.editorial %>
              </td>
              <td>
                <a class="btn btn-edit btnEditare">
                  <i class="fas fa-edit me-1"></i>Editar
                </a>
                <a href="/eliminareditorial/<%= editorial._id %>" class="btn btn-delete">
                  <i class="fas fa-trash me-1"></i>Eliminar
                </a>
              </td>
            </tr>
            <% }) %>
        </tbody>
      </table>
    </div>
  </div>

  <!-- Modal usando Bootstrap -->
  <div class="modal fade" id="modalEditorial" tabindex="-1" aria-labelledby="modalEditorialLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
      <div class="modal-content">
        <div class="modal-header bg-primary text-white">
          <h5 class="modal-title" id="modalEditorialLabel"><i class="fas fa-edit me-2"></i>Editar Editorial</h5>
          <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body">
          <form action="/editareditorial" method="post">
            <input type="text" id="e_id" name="e_id" class="form-control" hidden>
            <div class="mb-3">
              <label for="e_edi" class="form-label"><i class="fas fa-hashtag me-2"></i>IdEditorial:</label>
              <input type="text" name="e_edi" id="e_edi" class="form-control" required>
            </div>
            <div class="mb-3">
              <label for="e_edit" class="form-label"><i class="fas fa-building me-2"></i>Editorial:</label>
              <input type="text" name="e_edit" id="e_edit" class="form-control" required>
            </div>
            <div class="modal-footer">
              <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
              <button type="submit" class="btn btn-primary"><i class="fas fa-save me-2"></i>Actualizar</button>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
  <script src="js/editorial.js">
  </script>